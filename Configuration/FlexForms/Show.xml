<T3DataStructure>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Anzuzeigende Elemente</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.columns>
                        <TCEforms>
                            <label>Anzahl maximaler Spalten</label>
                            <config>
                                <type>input</type>
                                <size>20</size>
                                <max>30</max>
                                <default>6</default>
                                <range>
                                    <lower>1</lower>
                                    <upper>12</upper>
                                </range>
                                <eval>trim,int</eval>
                            </config>
                        </TCEforms>
                    </settings.columns>
					<settings.collections>
						<TCEforms>
							<label>Zu ber端cksichtigende File Collections</label>
							<config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>sys_file_collection</allowed>
							</config>
						</TCEforms>
					</settings.collections>
                    <settings.files>
                        <TCEforms>
                            <label>Zu ber端cksichtigende Dateien</label>
                            <config>
                                <type>inline</type>
                                <maxitems>99</maxitems>
                                <foreign_table>sys_file_reference</foreign_table>
                                <foreign_table_field>tablenames</foreign_table_field>
                                <foreign_label>uid_local</foreign_label>
                                <foreign_sortby>sorting_foreign</foreign_sortby>
                                <foreign_selector>uid_local</foreign_selector>
                                <foreign_selector_fieldTcaOverride type="array">
                                    <config>
                                        <appearance>
                                            <elementBrowserType>file</elementBrowserType>
                                            <elementBrowserAllowed>jpg,png</elementBrowserAllowed>
                                        </appearance>
                                    </config>
                                </foreign_selector_fieldTcaOverride>
                                <foreign_match_fields type="array">
                                    <fieldname>image</fieldname>
                                </foreign_match_fields>
                                <appearance type="array">
                                    <newRecordLinkAddTitle>1</newRecordLinkAddTitle>
                                    <headerThumbnail>
                                        <field>uid_local</field>
                                        <height>64</height>
                                        <width>64</width>
                                    </headerThumbnail>
                                </appearance>
                            </config>
                        </TCEforms>
                    </settings.files>
                </el>
            </ROOT>
        </sDEF>

        <view>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Pagination</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.pagination.active>
                        <TCEforms>
                            <label>Pagination aktivieren</label>
                            <onChange>reload</onChange>
                            <config>
                                <type>check</type>
                                <default>1</default>
                            </config>
                        </TCEforms>
                    </settings.pagination.active>
                    <settings.pagination.insertAbove>
                        <TCEforms>
                            <label>Seitenauswahl oberhalb von Galerie einf端gen</label>
                            <displayCond>
                                <OR>
                                    <value1>FIELD:settings.pagination.active:REQ:true</value1>
                                    <value2>REC:NEW:true</value2>
                                </OR>
                            </displayCond>
                            <config>
                                <type>check</type>
                                <default>1</default>
                            </config>
                        </TCEforms>
                    </settings.pagination.insertAbove>
                    <settings.pagination.insertBelow>
                        <TCEforms>
                            <label>Seitenauswahl unterhalb von Galerie einf端gen</label>
                            <displayCond>
                                <OR>
                                    <value1>FIELD:settings.pagination.active:REQ:true</value1>
                                    <value2>REC:NEW:true</value2>
                                </OR>
                            </displayCond>
                            <config>
                                <type>check</type>
                                <default>1</default>
                            </config>
                        </TCEforms>
                    </settings.pagination.insertBelow>
                    <settings.pagination.itemsPerPage>
                        <TCEforms>
                            <label>Bilder pro Seite</label>
                            <displayCond>
                                <OR>
                                    <value1>FIELD:settings.pagination.active:REQ:true</value1>
                                    <value2>REC:NEW:true</value2>
                                </OR>
                            </displayCond>
                            <config>
                                <type>input</type>
                                <size>20</size>
                                <max>30</max>
                                <default>36</default>
                                <eval>trim,int</eval>
                            </config>
                        </TCEforms>
                    </settings.pagination.itemsPerPage>
                </el>
            </ROOT>
        </view>
    </sheets>
</T3DataStructure>